{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "schema watch",
      "command": "deno",
      "args": ["task", "schema", "--watch"],
      "isBackground": true,
      "type": "shell",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
