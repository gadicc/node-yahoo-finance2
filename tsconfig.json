{
  "extends": "@tsconfig/node12/tsconfig.json",

  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES2020",
    "allowJs": true,
    "preserveConstEnums": true,
    "declaration": true,
    "resolveJsonModule": true
  },

  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.spec.ts"]
}
