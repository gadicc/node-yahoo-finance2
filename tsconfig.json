{
  "extends": "@tsconfig/node12/tsconfig.json",

  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es2020",
    "outDir": "dist/default",
    "allowJs": true,
    "preserveConstEnums": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },

  "include": ["./src/**/*", "./scripts/**/*"],
  "exclude": ["./src/**/*.spec.ts"],

  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
